{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",

	"ConnectionStrings": {
		"DefaultDbConnection": "Host=localhost;Port=5432;Database=TradeAgent;Username=postgres;Password=admin123"
	},

	"RabbitMq": {
		"Host": "localhost",
		"Port": 5672,
		"Username": "admin",
		"Password": "admin123",
		"ExchangeName": "trades",
		"QueueName": "trade_executed"
	},

	"Redis": {
		"REDIS_CONNECTION": "localhost:6379"
	},

	"Serilog": {
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning",
				"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
				"Microsoft.Hosting.Lifetime": "Information"
			}
		},
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
		"WriteTo": [
			{ "Name": "Console" }
		]
	}
}
